<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Shop</title>
        <link rel="stylesheet" href="/CSS/shop.css">
    </head>

    <body>
       

        <!-- Hero Section -->
        <section id="page-header">
            <h2 class="select-none" >#slayAtHome</h2>
            <p class="select-none" >Shop more with Exciting Offers on Curated Brand!</p>
        </section> 

        <!-- Products -->
        <section id="product1" class="section-p1">
        
            <div class="pro-container">
            
                <% if (data && data.length > 0) { %>
                    <% data.forEach(product => { %>
                        <div class="pro" onclick="window.location.href='/products/<%= product.product_id %>';">
                            <img 
                            onerror="this.onerror=null; this.src='/img/not-found-image.png';"
                            class="product-image" src=<%- product.img %> alt="P-<%= product.product_id %>">
                            <div class="des">
                                <!-- <span><%= product.manufacturer_id %></span> -->
                                <h5><%= product.product_name %></h5>
                                <div class="star">
                                    <% for (let i = 0; i < 5; i++) { %>
                                        <i class="fa-solid fa-star" style="<%= i < product.rating ? '' : 'opacity: 0.3;' %>"></i>
                                    <% } %>
                                </div>
                                <h4><%= (product.price / 1000) %>K</h4>
                            </div>
                            <a href="#" class="cart"><i class="fa-solid fa-cart-shopping"></i></a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No products available.</p>
                <% } %>
                
                
                </div>
            </div>
        </section>

        <!--Slider Page Icon  -->
        <section id="pagination" class="section-p1">
            <a href="#">1</a>
            <a href="#">2</a>
            <a href="#">3</a>
            <a href="#"><i class="fa-solid fa-arrow-right"></i></a>
        </section>


        <script src="https://kit.fontawesome.com/19dfb206c9.js" crossorigin="anonymous"></script>
    </body>

</html>