<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Forgot Password</title>
    </head>
    <body>
        <!-- Hero Section -->
        <section id="page-header" class="blog-header">
            <h2>#ForgotSomething?</h2>
            <p>Passwords are Hard, Right?.</p>
        </section>

        <!-- Login Form Section -->
        <section id="login-form">
            <div class="form-box">
                <h2>Provide Your Email</h2>
                
                <!-- Error Messages -->
                <% if (messages && messages.error && messages.error.length > 0) { %>
                    <div id="error-messages" class="alert alert-error">
                        <% messages.error.forEach(function(error) { %>
                            <div class="error-message"><%= error %></div>
                        <% }); %>
                    </div>
                <% } %>

                <!-- Success Messages -->
                <% if (messages && messages.success && messages.success.length > 0) { %>
                    <div id="success-messages" class="alert alert-success">
                        <% messages.success.forEach(function(success) { %>
                            <div class="success-message"><%= success %></div>
                        <% }); %>
                    </div>
                <% } %>

                <form action="/auth/forgot-password" method="POST">
                    <input type="email" 
                           placeholder="Email" 
                           name="email" 
                           value="<%= locals.formData ? formData.email : '' %>"
                           required>
                    <button type="submit" class="normal">Submit</button>
                </form>
            </div>
        </section>

        <script>
            // Auto-hide messages after 5 seconds
            const messages = document.querySelectorAll('.alert');
            messages.forEach(message => {
                setTimeout(() => {
                    message.style.display = 'none';
                }, 5000);
            });
        </script>
    </body>
</html>